@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">Welcome to My YouTube App</h1>
        <p class="lead text-muted">Easily search and discover YouTube videos with our intuitive interface.</p>
    </div>

    <hr />

    <!-- About Us Section -->
    <div class="row align-items-center mt-4">
        <div class="col-md-6">
            <h2 class="fw-bold">About Us</h2>
            <p class="text-muted">
                Welcome to <strong>YouTube App</strong>, your one-stop platform for discovering and exploring YouTube videos effortlessly.
                Our website is powered by the <strong>YouTube API</strong>, allowing users to search, stream, and find trending content quickly.
            </p>

            <h4 class="mt-3">🌟 Why Choose Us?</h4>
            <ul class="list-unstyled">
                <li>✅ <strong>Fast & Efficient Search</strong> – Instantly find the latest music, podcasts, and videos.</li>
                <li>✅ <strong>User-Friendly Interface</strong> – Simple and intuitive design for a seamless experience.</li>
                <li>✅ <strong>Always Updated</strong> – Get the most recent videos directly from YouTube.</li>
            </ul>

            <p class="text-muted">
                Whether you're looking for your favorite songs, trending videos, or discovering new content,
                <strong>YouTube App</strong> makes it easy for you!
            </p>
            <img src="~/images/artist.png" class="img-fluid rounded" alt="About Us">

        </div>

        <!-- Image Section -->
        <div class="col-md-6 text-center">
            <img src="~/images/youtubelogo.png" class="img-fluid rounded shadow-lg" alt="Website Logo">
        </div>
    </div>
</div>
